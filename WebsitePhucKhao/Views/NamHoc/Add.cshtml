@model WebsitePhucKhao.Models.HocKy

<h2>Thêm học kỳ mới</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="TenHocKy"></label>
        <input asp-for="TenHocKy" class="form-control" required />
        <span asp-validation-for="TenHocKy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MaNamHoc">Chọn Năm Học</label>
        <select asp-for="MaNamHoc" asp-items="ViewBag.NamHocList" class="form-control" required>
            <option value="">-- Chọn Năm Học --</option>
        </select>
        <span asp-validation-for="MaNamHoc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
