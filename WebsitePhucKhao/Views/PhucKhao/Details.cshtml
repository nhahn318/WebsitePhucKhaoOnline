@model WebsitePhucKhao.Models.DonPhucKhao
@{
    ViewData["Title"] = "Chi tiết đơn phúc khảo";
}

<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table">

        <tr><th>Mã đơn</th><td>@Model.MaDon</td></tr>
        <tr><th>Họ tên sinh viên</th><td>@Model.SinhVien?.HoTen</td></tr>
        <tr><th>Môn học</th><td>@Model.MonHoc?.TenMonHoc</td></tr>
        <tr><th>Điểm hiện tại</th><td>@Model.DiemHienTai</td></tr>
        <tr><th>Điểm mong muốn</th><td>@Model.DiemMongMuon</td></tr>
        <tr><th>Học kỳ</th><td>@Model.HocKy</td></tr>
        <tr><th>Năm học</th><td>@Model.NamHoc</td></tr>
        <tr><th>Ngày gửi</th><td>@Model.NgayGui.ToString("dd/MM/yyyy")</td></tr>
        <tr><th>Phòng thi</th><td>@Model.PhongThi</td></tr>
        <tr><th>Địa điểm thi</th><td>@Model.DiaDiemThi</td></tr>
        <tr><th>Lý do</th><td>@Model.LyDo</td></tr>
        <tr><th>Trạng thái</th><td>@Model.TrangThai</td></tr>
    </table>
</div>

<a asp-action="DanhSachDonPhucKhao" class="btn btn-secondary">Quay lại</a>
