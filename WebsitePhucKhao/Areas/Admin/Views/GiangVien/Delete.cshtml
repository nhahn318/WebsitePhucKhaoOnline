@model WebsitePhucKhao.Models.GiangVien

<h2>Xác nhận xóa giảng viên</h2>

<p>Bạn có chắc chắn muốn xóa giảng viên <strong>@Model.HoTen</strong> không?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.MaGiangVien" method="post">
    <input type="hidden" asp-for="MaGiangVien" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
