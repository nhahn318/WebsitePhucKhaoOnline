@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="dashboard-container">
    <div class="page-header mb-4">
        <div class="container-fluid px-4">
            <h1 class="page-title">Bảng điều khiển</h1>
            <p class="page-subtitle">Thống kê và hoạt động gần đây</p>
        </div>
    </div>

    <div class="container-fluid px-4">
        <div class="row g-4">
            <!-- Thống kê -->
            <div class="col-xl-3 col-md-6">
                <div class="card h-100">
                    <div class="stats-card">
                        <div class="stats-icon bg-primary bg-opacity-10">
                            <i class="fas fa-users text-primary"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Tổng sinh viên</div>
                            <div class="stats-value">@(ViewBag.TotalStudents ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card h-100">
                    <div class="stats-card">
                        <div class="stats-icon bg-success bg-opacity-10">
                            <i class="fas fa-chalkboard-teacher text-success"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Tổng giảng viên</div>
                            <div class="stats-value">@(ViewBag.TotalTeachers ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card h-100">
                    <div class="stats-card">
                        <div class="stats-icon bg-info bg-opacity-10">
                            <i class="fas fa-book text-info"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Tổng môn học</div>
                            <div class="stats-value">@(ViewBag.TotalSubjects ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card h-100">
                    <div class="stats-card">
                        <div class="stats-icon bg-warning bg-opacity-10">
                            <i class="fas fa-file-alt text-warning"></i>
                        </div>
                        <div class="stats-info">
                            <div class="stats-label">Tổng đơn phúc khảo</div>
                            <div class="stats-value">@(ViewBag.TotalAppeals ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thống kê trạng thái -->
            <div class="col-xl-8">
                <div class="card h-100">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">Trạng thái đơn phúc khảo</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th class="border-0">Trạng thái</th>
                                        <th class="border-0 text-center">Số lượng</th>
                                        <th class="border-0">Tỷ lệ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.AppealsByStatus != null)
                                    {
                                        @foreach (var status in ViewBag.AppealsByStatus)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-@status.Color">@status.Name</span>
                                                </td>
                                                <td class="text-center">@status.Count</td>
                                                <td style="width: 40%;">
                                                    <div class="progress" style="height: 8px;">
                                                        <div class="progress-bar bg-@status.Color" 
                                                             role="progressbar" 
                                                             style="width: @status.Percentage%" 
                                                             aria-valuenow="@status.Percentage" 
                                                             aria-valuemin="0" 
                                                             aria-valuemax="100"></div>
                                                    </div>
                                                    <small class="text-muted mt-1 d-block">@status.Percentage%</small>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center py-4">Không có dữ liệu</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hoạt động gần đây -->
            <div class="col-xl-4">
                <div class="card h-100">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">Hoạt động gần đây</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @if (ViewBag.RecentActivities != null)
                            {
                                @foreach (var activity in ViewBag.RecentActivities)
                                {
                                    <div class="list-group-item px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-@activity.Color bg-opacity-10 text-@activity.Color">
                                                <i class="fas fa-@activity.Icon"></i>
                                            </div>
                                            <div class="ms-3">
                                                <p class="mb-1 fw-medium">@activity.Description</p>
                                                <small class="text-muted">@activity.Time</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">Không có hoạt động nào gần đây</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 1.5rem 0;
    }

    .page-header {
        background-color: #fff;
        padding: 1.5rem 0;
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #2d3748;
        margin: 0;
    }

    .page-subtitle {
        color: #718096;
        margin: 0.5rem 0 0;
    }

    .card {
        border: 1px solid rgba(0,0,0,.05);
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1);
        border-radius: 0.75rem;
    }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .card-title {
        color: #2d3748;
        font-weight: 600;
    }

    .stats-card {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .stats-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stats-info {
        flex: 1;
    }

    .stats-label {
        color: #718096;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .stats-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2d3748;
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .progress {
        background-color: #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 10px;
    }

    .table > :not(caption) > * > * {
        padding: 1rem;
    }

    .badge {
        padding: 0.5em 1em;
        font-weight: 500;
    }

    .list-group-item {
        border-left: 0;
        border-right: 0;
    }

    .list-group-item:first-child {
        border-top: 0;
    }

    .list-group-item:last-child {
        border-bottom: 0;
    }
</style>
