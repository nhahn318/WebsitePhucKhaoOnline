@model WebsitePhucKhao.Models.NhanVienPhongDaoTao

@{
    ViewData["Title"] = "Thêm Nhân Viên";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/add-page.css" />
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary">Thêm nhân viên mới</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="card-title">
                        <i class="fas fa-user-plus me-2"></i>Thông tin nhân viên
                    </h3>
                </div>
                <form asp-action="Add" method="post">
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-3 info-item">
                                    <label class="text-primary small fw-semibold">
                                        <i class="fas fa-id-card me-2"></i>Mã nhân viên:
                                    </label>
                                    <input asp-for="MaNhanVienPhongDaoTao" class="form-control" required />
                                    <span asp-validation-for="MaNhanVienPhongDaoTao" class="text-danger small"></span>
                                </div>
                                <div class="mb-3 info-item">
                                    <label class="text-primary small fw-semibold">
                                        <i class="fas fa-user me-2"></i>Họ tên:
                                    </label>
                                    <input asp-for="HoTen" class="form-control" required />
                                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3 info-item">
                                    <label class="text-primary small fw-semibold">
                                        <i class="fas fa-envelope me-2"></i>Email:
                                    </label>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="mb-3 info-item">
                                    <label class="text-primary small fw-semibold">
                                        <i class="fas fa-phone me-2"></i>Số điện thoại:
                                    </label>
                                    <input asp-for="SoDienThoai" class="form-control" required />
                                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3 info-item">
                                    <label class="text-primary small fw-semibold">
                                        <i class="fas fa-briefcase me-2"></i>Chức vụ:
                                    </label>
                                    <input asp-for="ChucVu" class="form-control" required />
                                    <span asp-validation-for="ChucVu" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Thêm nhân viên
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-arrow-left me-2"></i>Trở về
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin/add-page.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
