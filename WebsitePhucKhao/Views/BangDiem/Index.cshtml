@model IEnumerable<WebsitePhucKhao.Models.BangDiem>

@{
    ViewData["Title"] = "Danh sách Bảng Điểm";
}

<h2>Danh sách Bảng Điểm</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Sinh Viên</th>
            <th>Họ Tên</th>
            <th>Mã Môn Học</th>
            <th>Tên Môn Học</th>
            <th>Điểm Giữa Kỳ</th>
            <th>Điểm Cuối Kỳ</th>
            <th>Điểm Tổng Kết</th>
            <th>Phúc Khảo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bd in Model)
        {
            <tr>
                <td>@bd.MaSinhVien</td>
                <td>@(bd.SinhVien != null ? bd.SinhVien.HoTen : "Không có")</td>
                <td>@bd.MaMonHoc</td>
                <td>@(bd.MonHoc != null ? bd.MonHoc.TenMonHoc : "Không có")</td>
                <td>@bd.DiemGiuaKy</td>
                <td>@bd.DiemCuoiKy</td>
                <td>@bd.DiemTongKet</td>
                <td>@(bd.TrangThaiPhucKhao ? "Có" : "Không")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bd.Id">Xem</a> |
                    <a asp-action="Update" asp-route-id="@bd.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@bd.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Thêm Bảng Điểm</a>
