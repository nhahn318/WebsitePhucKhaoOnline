@model IEnumerable<WebsitePhucKhao.Models.SinhVien>
@{
    ViewData["Title"] = "Quản lý sinh viên";
}

<!-- Page Header -->
<div class="admin-page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Quản lý sinh viên</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Bảng điều khiển</a></li>
                    <li class="breadcrumb-item active">Sinh viên</li>
                </ol>
            </nav>
        </div>
        <a class="btn btn-primary" href="@Url.Action("Add", "SinhVien", new { area = "Admin" })">
            <i class="fas fa-plus me-2"></i>Thêm sinh viên
        </a>
    </div>
</div>

<!-- Main Content -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Khoa</th>
                        <th>Chuyên ngành</th>
                        <th>Lớp</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSinhVien</td>
                            <td>@item.HoTen</td>
                            <td>@item.Email</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Khoa</td>
                            <td>@item.ChuyenNganh</td>
                            <td>@item.Lop</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-info" href="@Url.Action("Details", "SinhVien", new { area = "Admin", id = item.MaSinhVien })">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-warning" href="@Url.Action("Update", "SinhVien", new { area = "Admin", id = item.MaSinhVien })">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "SinhVien", new { area = "Admin", id = item.MaSinhVien })">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
