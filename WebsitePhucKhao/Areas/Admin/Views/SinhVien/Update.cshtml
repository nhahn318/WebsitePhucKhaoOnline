@model WebsitePhucKhao.Models.SinhVien

@{
    ViewData["Title"] = "Cập nhật Sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin/sinhvien.css" rel="stylesheet">
}

<div class="sv-content-wrapper">
    <div class="sv-content-header">
        <div class="sv-container-fluid">
            <div class="sv-row sv-mb-2">
                <div class="sv-col">
                    <h1 class="sv-text-primary">Cập nhật Sinh viên</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="sv-content">
        <div class="sv-container-fluid">
            <div class="sv-card sv-shadow-sm">
                <div class="sv-card-header sv-bg-gradient-primary sv-text-white">
                    <h3 class="sv-card-title">
                        <i class="fas fa-user-edit sv-me-2"></i>Thông tin Sinh viên
                    </h3>
                </div>
                <form asp-action="Update" method="post">
                    <div class="sv-card-body">
                        <div class="sv-row sv-g-4">
                            <div class="sv-col-md-6">
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-id-card sv-me-2"></i>Mã Sinh viên:
                                    </label>
                                    <input asp-for="MaSinhVien" class="sv-form-control" readonly />
                                </div>
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-user sv-me-2"></i>Họ và tên:
                                    </label>
                                    <input asp-for="HoTen" class="sv-form-control" required />
                                    <span asp-validation-for="HoTen" class="sv-text-danger sv-small"></span>
                                </div>
                            </div>
                            <div class="sv-col-md-6">
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-envelope sv-me-2"></i>Email:
                                    </label>
                                    <input asp-for="Email" class="sv-form-control" type="email" required />
                                    <span asp-validation-for="Email" class="sv-text-danger sv-small"></span>
                                </div>
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-phone sv-me-2"></i>Số điện thoại:
                                    </label>
                                    <input asp-for="SoDienThoai" class="sv-form-control" required />
                                    <span asp-validation-for="SoDienThoai" class="sv-text-danger sv-small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="sv-row sv-g-4">
                            <div class="sv-col-md-4">
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-university sv-me-2"></i>Khoa:
                                    </label>
                                    <select asp-for="MaKhoa" class="sv-form-control" asp-items="ViewBag.KhoaList">
                                        <option value="">-- Chọn khoa --</option>
                                    </select>
                                    <span asp-validation-for="MaKhoa" class="sv-text-danger sv-small"></span>
                                </div>
                            </div>
                            <div class="sv-col-md-4">
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-graduation-cap sv-me-2"></i>Chuyên ngành:
                                    </label>
                                    <select asp-for="MaChuyenNganh" class="sv-form-control" asp-items="ViewBag.ChuyenNganhList">
                                        <option value="">-- Chọn chuyên ngành --</option>
                                    </select>
                                    <span asp-validation-for="MaChuyenNganh" class="sv-text-danger sv-small"></span>
                                </div>
                            </div>
                            <div class="sv-col-md-4">
                                <div class="sv-mb-3 sv-info-item">
                                    <label class="sv-text-primary sv-small sv-fw-semibold">
                                        <i class="fas fa-users sv-me-2"></i>Lớp:
                                    </label>
                                    <select asp-for="MaLop" class="sv-form-control" asp-items="ViewBag.LopList">
                                        <option value="">-- Chọn lớp --</option>
                                    </select>
                                    <span asp-validation-for="MaLop" class="sv-text-danger sv-small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sv-card-footer">
                        <button type="submit" class="sv-btn-primary">
                            <i class="fas fa-save sv-me-2"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="sv-btn-outline-secondary sv-ms-2">
                            <i class="fas fa-arrow-left sv-me-2"></i>Trở về
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
