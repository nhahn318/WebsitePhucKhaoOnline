@model WebsitePhucKhao.Models.MonHoc
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin/delete-page.css" rel="stylesheet" />
}
<div class="content-wrapper">
    <div class="card">
        <div class="card-header bg-gradient-danger">
            <h3>Xác nhận xóa môn học</h3>
        </div>
        <div class="card-body">
            <p>Bạn có chắc chắn muốn xóa môn học <strong>@Model.TenMonHoc</strong> không?</p>
            <div class="card-footer">
                <form asp-area="" asp-action="DeleteConfirmed" asp-route-id="@Model.MaMonHoc" method="post">
                    <input type="hidden" asp-for="MaMonHoc" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Xóa
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
            </div>
        </div>
    </div>
</div>