@model IEnumerable<WebsitePhucKhao.Models.NamHoc>

<h2>Danh sách Năm Học</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Năm Học</th>
            <th>Tên Năm Học</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var namHoc in Model)
        {
            <tr>
                <td>@namHoc.MaNamHoc</td>
                <td>@namHoc.TenNamHoc</td>
                <td>
                    <a asp-action="Details" asp-route-id="@namHoc.MaNamHoc">Xem</a> |
                    <a asp-action="Update" asp-route-id="@namHoc.MaNamHoc">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@namHoc.MaNamHoc">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Thêm Năm Học</a>
