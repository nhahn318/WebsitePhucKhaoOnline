@model WebsitePhucKhao.Models.GiangVien

<!-- Thêm Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Thêm Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary">Chi tiết giảng viên</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="card-title">Thông tin giảng viên</h3>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-3 info-item">
                                <label class="text-primary small fw-semibold">Mã Giảng Viên:</label>
                                <p class="mb-0 text-dark">@Model.MaGiangVien</p>
                            </div>
                            <div class="mb-3 info-item">
                                <label class="text-primary small fw-semibold">Họ tên:</label>
                                <p class="mb-0 text-dark">@Model.HoTen</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 info-item">
                                <label class="text-primary small fw-semibold">Email:</label>
                                <p class="mb-0 text-dark">@Model.Email</p>
                            </div>
                            <div class="mb-3 info-item">
                                <label class="text-primary small fw-semibold">Số điện thoại:</label>
                                <p class="mb-0 text-dark">@Model.SoDienThoai</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3 info-item">
                                <label class="text-primary small fw-semibold">Khoa:</label>
                                <p class="mb-0 text-dark">@Model.Khoa?.TenKhoa</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Trở về
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Thêm Bootstrap 5 JS Bundle (bao gồm Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    :root {
        --primary-color: #4361ee;
        --primary-light: #4895ef;
        --primary-dark: #3f37c9;
        --secondary-color: #f72585;
        --light-color: #f8f9fa;
        --dark-color: #212529;
    }
    
    .content-wrapper {
        background-color: #f0f2f5;
    }
    
    .card {
        border: none;
        border-radius: 0.5rem;
        overflow: hidden;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    }
    
    .card-header {
        border-bottom: none;
        padding: 1.25rem;
    }
    
    .card-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .card-footer {
        border-top: 1px solid rgba(0,0,0,.05);
        padding: 1rem 1.5rem;
    }
    
    .info-item {
        padding: 0.75rem;
        border-radius: 0.375rem;
        background-color: rgba(67, 97, 238, 0.05);
        transition: all 0.3s ease;
    }
    
    .info-item:hover {
        background-color: rgba(67, 97, 238, 0.1);
        transform: translateY(-2px);
    }
    
    .text-primary {
        color: var(--primary-color) !important;
    }
    
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    
    .btn-primary:hover {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
    }
    
    .small {
        font-size: 0.875rem;
    }
    
    .fw-semibold {
        font-weight: 600;
    }
    
    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
</style>
