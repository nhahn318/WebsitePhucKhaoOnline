@model IEnumerable<WebsitePhucKhao.Models.SinhVien>

<h2>Danh sách Sinh Viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Sinh Viên</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Khoa</th>
            <th>Chuyên Ngành</th>
            <th>Lớp</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sv in Model)
        {
            <tr>
                <td>@sv.MaSinhVien</td>
                <td>@sv.HoTen</td>
                <td>@sv.Email</td>
                <td>@sv.SoDienThoai</td>
                <td>@(sv.Khoa != null ? sv.Khoa.TenKhoa : "Chưa có")</td> 
                <td>@(sv.ChuyenNganh != null ? sv.ChuyenNganh.TenChuyenNganh : "Chưa có")</td>
                <td>@sv.Lop?.TenLop</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sv.MaSinhVien">Xem</a> |
                    <a asp-action="Update" asp-route-id="@sv.MaSinhVien">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@sv.MaSinhVien">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Thêm Sinh Viên</a>
