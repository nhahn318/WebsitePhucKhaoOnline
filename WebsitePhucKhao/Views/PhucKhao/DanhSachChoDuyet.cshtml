@model List<WebsitePhucKhao.Models.DonPhucKhao>

<h2>Danh sách đơn chờ duyệt</h2>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Sinh viên</th>
            <th>Môn học</th>
            <th>Ngày gửi</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].SinhVien?.HoTen</td>
                <td>@Model[i].MonHoc?.TenMonHoc</td>
                <td>@Model[i].NgayGui.ToString("dd/MM/yyyy")</td>
                <td>@Model[i].TrangThai</td>
                <td>
                    <a asp-action="Duyet" asp-route-id="@Model[i].MaDon" class="btn btn-success">Duyệt</a>
                </td>
            </tr>
        }
    </tbody>
</table>
