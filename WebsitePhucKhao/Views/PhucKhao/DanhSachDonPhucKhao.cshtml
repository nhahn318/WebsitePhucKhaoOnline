@model IEnumerable<dynamic>

<h2>Danh sách đơn phúc khảo</h2>
<a asp-controller="PhucKhao" asp-action="Create" class="btn btn-primary mb-3">Tạo đơn mới</a>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Ngày gửi</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var don in Model)
        {
            <tr>
                <td>@don.STT</td>
                <td>@don.NgayGui.ToString("dd/MM/yyyy")</td>
                <td>@don.TrangThai</td>
                <td>
                    <a asp-action="Details" asp-route-id="@don.MaDon" class="btn btn-info btn-sm">Chi tiết</a>

                    @if (don.TrangThai == "Chờ xác nhận")
                    {
                        <a asp-action="Edit" asp-route-id="@don.MaDon" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@don.MaDon" class="btn btn-danger btn-sm">Xóa</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
