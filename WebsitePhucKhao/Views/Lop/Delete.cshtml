@model WebsitePhucKhao.Models.Lop

@{
    ViewData["Title"] = "Xóa Lớp";
}

<h2>Bạn có chắc chắn muốn xóa lớp này không?</h2>

<div>
    <h4>Mã Lớp: @Model.MaLop</h4>
    <h4>Tên Lớp: @Model.TenLop</h4>
    <h4>Khoa: @Model.Khoa?.TenKhoa</h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaLop" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
