@model WebsitePhucKhao.Models.Lop

@{
    ViewData["Title"] = "Xóa Lớp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Thêm Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Thêm Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary">Xóa lớp</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-danger text-white">
                    <h3 class="card-title">Xác nhận xóa</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Bạn có chắc chắn muốn xóa lớp này không?
                    </div>
                    <div class="info-item mb-3">
                        <label class="text-primary small fw-semibold">Mã Lớp:</label>
                        <p class="mb-0">@Model.MaLop</p>
                    </div>
                    <div class="info-item mb-3">
                        <label class="text-primary small fw-semibold">Tên Lớp:</label>
                        <p class="mb-0">@Model.TenLop</p>
                    </div>
                    <div class="info-item">
                        <label class="text-primary small fw-semibold">Khoa:</label>
                        <p class="mb-0">@ViewBag.KhoaName</p>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="MaLop" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-arrow-left me-2"></i>Trở về
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Thêm Bootstrap 5 JS Bundle (bao gồm Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    :root {
        --primary-color: #4361ee;
        --primary-light: #4895ef;
        --primary-dark: #3f37c9;
        --secondary-color: #f72585;
        --light-color: #f8f9fa;
        --dark-color: #212529;
    }
    
    .content-wrapper {
        background-color: #f0f2f5;
    }
    
    .card {
        border: none;
        border-radius: 0.5rem;
        overflow: hidden;
    }
    
    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #ff4d5e);
    }
    
    .card-header {
        border-bottom: none;
        padding: 1.25rem;
    }
    
    .card-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .card-footer {
        border-top: 1px solid rgba(0,0,0,.05);
        padding: 1rem 1.5rem;
    }
    
    .info-item {
        padding: 0.75rem;
        border-radius: 0.375rem;
        background-color: rgba(67, 97, 238, 0.05);
        transition: all 0.3s ease;
    }
    
    .info-item:hover {
        background-color: rgba(67, 97, 238, 0.1);
        transform: translateY(-2px);
    }
    
    .text-primary {
        color: var(--primary-color) !important;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    
    .btn-danger:hover {
        background-color: #bb2d3b;
        border-color: #b02a37;
    }
    
    .btn-outline-secondary {
        color: #6c757d;
        border-color: #dee2e6;
    }
    
    .btn-outline-secondary:hover {
        color: #495057;
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    
    .small {
        font-size: 0.875rem;
    }
    
    .fw-semibold {
        font-weight: 600;
    }
    
    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
    
    .alert {
        border: none;
        border-radius: 0.375rem;
    }
    
    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
    }
</style>
