@using WebsitePhucKhao.Enums
@model List<WebsitePhucKhao.ViewModels.PhucKhaoDuocPhanCongViewModel>

@{
    ViewData["Title"] = "Đơn phúc khảo đã chấm";
    Layout = "~/Areas/GiangVien/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container mt-4">
    <h3 class="text-primary mb-4"><i class="fas fa-check-double me-2"></i>Danh sách đơn phúc khảo đã chấm</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa chấm đơn phúc khảo nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>STT</th>
                        <th>Môn học</th>
                        <th>Điểm trước</th>
                        <th>Điểm mong muốn</th>
                        <th>Điểm sau</th>
                        <th>Ngày chấm</th>
                        <th>Người duyệt</th>
                        <th>Trạng thái</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.TenMonHoc</td>
                            <td>@item.DiemTruocPhucKhao</td>
                            <td>@item.DiemMongMuon</td>
                            <td>@item.DiemSauPhucKhao</td>
                            <td>@item.NgayChamLai?.ToString("dd/MM/yyyy")</td>
                            <td>@item.NguoiDuyet</td>
                            <td>
                                <span class="badge bg-info">@item.TrangThaiPhucKhao.ToFriendlyString()</span>
                            </td>
                            <td>
                                <a asp-action="DetailChamDiem" asp-route-maDon="@item.MaDon" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
