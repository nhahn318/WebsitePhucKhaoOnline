@model List<WebsitePhucKhao.Models.DonPhucKhao>
@using WebsitePhucKhao.Enums

@{
    ViewData["Title"] = "Danh sách đơn chờ duyệt";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Thêm Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Thêm Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary">Danh sách đơn chờ duyệt</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="card-title">Danh sách đơn phúc khảo</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="searchKeyword" class="form-control" placeholder="Nhập mã hoặc tên sinh viên..." autocomplete="off">
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>STT</th>
                                    <th>Sinh viên</th>
                                    <th>Môn học</th>
                                    <th>Ngày gửi</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="table-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model[i].SinhVien?.HoTen</td>
                                        <td>@Model[i].MonHoc?.TenMonHoc</td>
                                        <td>@Model[i].NgayGui.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(Model[i].TrangThai == TrangThaiPhucKhao.ChoXacNhan ? "warning" : 
                                                                Model[i].TrangThai == TrangThaiPhucKhao.DaDuyet ? "success" : 
                                                                Model[i].TrangThai == TrangThaiPhucKhao.DaCham ? "info" : "secondary")">
                                                @Model[i].TrangThai.ToFriendlyString()
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="ChiTietPhucKhaoChoNhanVien" asp-route-id="@Model[i].MaDon" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (Model[i].TrangThai == TrangThaiPhucKhao.ChoXacNhan)
                                                {
                                                    <a asp-action="Duyet" asp-route-id="@Model[i].MaDon" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i>
                                                    </a>
                                                }
                                                @if (Model[i].TrangThai == TrangThaiPhucKhao.DaDuyet)
                                                {
                                                    <a asp-action="UploadBaiThi" asp-route-maDon="@Model[i].MaDon" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-upload"></i>
                                                    </a>
                                                    <a asp-action="ChiTietUpload" asp-route-maDon="@Model[i].MaDon" class="btn btn-secondary btn-sm">
                                                        <i class="fas fa-file-alt"></i>
                                                    </a>
                                                    <a asp-action="EditUpload" asp-route-maDon="@Model[i].MaDon" class="btn btn-secondary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if (Model[i].TrangThai == TrangThaiPhucKhao.DaCham)
                                                {
                                                    <a asp-area="NhanVien" asp-controller="NhanVienPhongDaoTao" asp-action="ChiTietSauPhucKhao" asp-route-maDon="@Model[i].MaDon" class="btn btn-info btn-sm">
                                                        <i class="fas fa-clipboard-check"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Thêm Bootstrap 5 JS Bundle (bao gồm Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Thêm jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    :root {
        --primary-color: #4361ee;
        --primary-light: #4895ef;
        --primary-dark: #3f37c9;
        --secondary-color: #f72585;
        --light-color: #f8f9fa;
        --dark-color: #212529;
    }
    
    .content-wrapper {
        background-color: #f0f2f5;
    }
    
    .card {
        border: none;
        border-radius: 0.5rem;
        overflow: hidden;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    }
    
    .card-header {
        border-bottom: none;
        padding: 1.25rem;
    }
    
    .card-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table th {
        font-weight: 600;
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .btn-group {
        display: flex;
        gap: 0.25rem;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    
    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }
    
    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }
    
    .form-control:focus {
        border-color: var(--primary-light);
        box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(67, 97, 238, 0.05);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchKeyword").on("input", function () {
                var keyword = $(this).val();

                $.ajax({
                    url: '/NhanVien/PhucKhao/TimKiemDonPhucKhao',
                    type: 'GET',
                    data: { keyword: keyword },
                    success: function (data) {
                        $("#table-body").empty();

                        if (data.length === 0) {
                            $("#table-body").append('<tr><td colspan="6" class="text-center">Không tìm thấy kết quả nào.</td></tr>');
                        } else {
                            $.each(data, function (index, item) {
                                let thaoTac = `
                                    <div class="btn-group">
                                        <a href="/NhanVien/PhucKhao/ChiTietPhucKhaoChoNhanVien/${item.maDon}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>`;

                                if (item.trangThai === "Chờ xác nhận") {
                                    thaoTac += `
                                        <a href="/NhanVien/PhucKhao/Duyet/${item.maDon}" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i>
                                        </a>`;
                                } else if (item.trangThai === "Đã duyệt") {
                                    thaoTac += `
                                        <a href="/NhanVien/PhucKhao/UploadBaiThi?maDon=${item.maDon}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-upload"></i>
                                        </a>
                                        <a href="/NhanVien/PhucKhao/ChiTietUpload?maDon=${item.maDon}" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                        <a href="/NhanVien/PhucKhao/EditUpload?maDon=${item.maDon}" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>`;
                                } else if (item.trangThai === "Đã chấm") {
                                    thaoTac += `
                                        <a href="/NhanVien/NhanVienPhongDaoTao/ChiTietSauPhucKhao?maDon=${item.maDon}" class="btn btn-info btn-sm">
                                            <i class="fas fa-clipboard-check"></i>
                                        </a>`;
                                }

                                thaoTac += '</div>';

                                let badgeClass = item.trangThai === "Chờ xác nhận" ? "warning" :
                                                item.trangThai === "Đã duyệt" ? "success" :
                                                item.trangThai === "Đã chấm" ? "info" : "secondary";

                                $("#table-body").append(`
                                    <tr>
                                        <td>${item.stt}</td>
                                        <td>${item.tenSinhVien}</td>
                                        <td>${item.tenMonHoc}</td>
                                        <td>${item.ngayGui}</td>
                                        <td>
                                            <span class="badge bg-${badgeClass}">
                                                ${item.trangThai}
                                            </span>
                                        </td>
                                        <td>${thaoTac}</td>
                                    </tr>
                                `);
                            });
                        }
                    },
                    error: function () {
                        $("#table-body").html('<tr><td colspan="6" class="text-center text-danger">Lỗi tải dữ liệu.</td></tr>');
                    }
                });
            });
        });
    </script>
}



