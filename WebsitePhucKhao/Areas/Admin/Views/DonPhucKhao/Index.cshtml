@model IEnumerable<WebsitePhucKhao.Models.DonPhucKhao>
@using WebsitePhucKhao.Enums

@{
    ViewData["Title"] = "Danh sách đơn phúc khảo";
}

@section Styles {
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/admin/index-listuser.css" />
}

<div class="content-wrapper">
    <div class="page-header animate__animated animate__fadeIn">
        <div class="d-flex align-items-center justify-content-between">
            <div class="page-title">
                <h1 class="h3 mb-1 text-gray-800 fw-bold">Danh sách đơn phúc khảo</h1>
                <p class="text-muted mb-0">Quản lý các đơn phúc khảo trong hệ thống</p>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4 animate__animated animate__fadeInUp">
        <div class="card-header py-3">
            <div class="row align-items-center g-0">
                <div class="col">
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper bg-primary bg-opacity-10 rounded-3 me-3">
                            <i class="fas fa-file-alt text-primary"></i>
                        </div>
                        <h4 class="m-0 fw-bold text-primary fs-4">
                            Thông tin đơn phúc khảo
                        </h4>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper bg-success bg-opacity-10 rounded-3 me-2">
                            <i class="fas fa-clipboard-list text-success"></i>
                        </div>
                        <span class="badge bg-success rounded-pill small px-3 py-2">
                            Tổng: @Model.Count()
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-borderless table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 10%"><i class="fas fa-hashtag me-1"></i> Mã đơn</th>
                            <th style="width: 20%"><i class="fas fa-user me-1"></i> Sinh viên</th>
                            <th style="width: 20%"><i class="fas fa-book me-1"></i> Môn học</th>
                            <th style="width: 15%"><i class="fas fa-calendar me-1"></i> Học kỳ</th>
                            <th style="width: 15%"><i class="fas fa-star me-1"></i> Điểm hiện tại</th>
                            <th style="width: 15%"><i class="fas fa-star-half-alt me-1"></i> Điểm mong muốn</th>
                            <th style="width: 15%"><i class="fas fa-clock me-1"></i> Ngày gửi</th>
                            <th style="width: 15%"><i class="fas fa-info-circle me-1"></i> Trạng thái</th>
                            <th class="text-center" style="width: 10%"><i class="fas fa-cogs me-1"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold">@item.MaDon</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="student-info ms-3">
                                            <span class="student-name" title="@item.SinhVien?.HoTen">@item.SinhVien?.HoTen</span>
                                            <small class="text-muted d-block">@item.SinhVien?.MaSinhVien</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info text-white">@item.MonHoc?.TenMonHoc</span>
                                </td>
                                <td>@item.HocKy?.TenHocKy</td>
                                <td class="text-center fw-bold">@item.DiemHienTai</td>
                                <td class="text-center fw-bold">@item.DiemMongMuon</td>
                                <td>@item.NgayGui.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @{
                                        string statusClass = "";
                                        string statusText = "";
                                        switch (item.TrangThai)
                                        {
                                            case TrangThaiPhucKhao.ChoXacNhan:
                                                statusClass = "bg-warning";
                                                statusText = "Chờ xác nhận";
                                                break;
                                            case TrangThaiPhucKhao.DaDuyet:
                                                statusClass = "bg-info";
                                                statusText = "Đã duyệt";
                                                break;
                                            case TrangThaiPhucKhao.TuChoi:
                                                statusClass = "bg-danger";
                                                statusText = "Từ chối";
                                                break;
                                            case TrangThaiPhucKhao.ChoCham:
                                                statusClass = "bg-primary";
                                                statusText = "Chờ chấm";
                                                break;
                                            case TrangThaiPhucKhao.DaCham:
                                                statusClass = "bg-success";
                                                statusText = "Đã chấm";
                                                break;
                                            default:
                                                statusClass = "bg-secondary";
                                                statusText = "Không xác định";
                                                break;
                                        }
                                    }
                                    <span class="badge @statusClass text-white">@statusText</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-actions">
                                        <a href="@Url.Action("Details", "DonPhucKhao", new { id = item.MaDon, area = "Admin" })" 
                                           class="btn-action btn-view" data-bs-toggle="tooltip" data-bs-placement="top" title="Xem chi tiết">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a href="@Url.Action("Update", "DonPhucKhao", new { id = item.MaDon, area = "Admin" })" 
                                           class="btn-action btn-edit" data-bs-toggle="tooltip" data-bs-placement="top" title="Chỉnh sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.MaDon" asp-area="Admin" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-action btn-delete" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khởi tạo DataTable
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "order": [[6, "desc"]], // Sắp xếp theo ngày gửi giảm dần
                "pageLength": 10,
                "responsive": true
            });

            // Khởi tạo tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Xử lý nút xóa
            $('.btn-delete').on('click', function (e) {
                e.preventDefault();
                var form = $(this).closest('form');
                
                Swal.fire({
                    title: 'Xác nhận xóa?',
                    text: "Bạn có chắc chắn muốn xóa đơn phúc khảo này?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đồng ý',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
} 