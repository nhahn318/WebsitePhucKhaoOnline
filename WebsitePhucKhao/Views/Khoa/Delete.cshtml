@model WebsitePhucKhao.Models.Khoa

@{
    ViewData["Title"] = "Xác nhận xóa Khoa";
}

<h2>Xác nhận xóa Khoa</h2>

<p>Bạn có chắc chắn muốn xóa Khoa <strong>@Model.TenKhoa</strong> không?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.MaKhoa" method="post">
    <input type="hidden" asp-for="MaKhoa" />

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
