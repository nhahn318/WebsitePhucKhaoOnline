@model WebsitePhucKhao.Models.DonPhucKhao

@{
    ViewData["Title"] = "Xóa đơn phúc khảo";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa đơn phúc khảo sau không?</h4>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr><th>Mã đơn</th><td>@Model.MaDon</td></tr>
        <tr><th>Họ tên sinh viên</th><td>@Model.SinhVien?.HoTen</td></tr>
        <tr><th>Môn học</th><td>@Model.MonHoc?.TenMonHoc</td></tr>
        <tr><th>Điểm hiện tại</th><td>@Model.DiemHienTai</td></tr>
        <tr><th>Điểm mong muốn</th><td>@Model.DiemMongMuon</td></tr>
        <tr><th>Học kỳ</th><td>@Model.HocKy?.TenHocKy</td></tr>
        <tr><th>Năm học</th><td>@Model.NamHoc?.TenNamHoc</td></tr>
        <tr><th>Ngày gửi</th><td>@Model.NgayGui.ToString("dd/MM/yyyy")</td></tr>
        <tr><th>Lý do</th><td>@Model.LyDo</td></tr>
        <tr><th>Trạng thái</th><td>@Model.TrangThai</td></tr>
    </table>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaDon" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="DanhSachDonPhucKhao" class="btn btn-secondary">Hủy</a>
</form>
