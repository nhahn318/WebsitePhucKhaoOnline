@model List<WebsitePhucKhao.Models.DonPhucKhao>

<h2>Danh sách đơn chờ duyệt</h2>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Sinh viên</th>
            <th>Môn học</th>
            <th>Ngày gửi</th>
            <th>Trạng thái</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].SinhVien?.HoTen</td>
                <td>@Model[i].MonHoc?.TenMonHoc</td>
                <td>@Model[i].NgayGui.ToString("dd/MM/yyyy")</td>
                <td>@Model[i].TrangThai</td>

                <td>
                    @if (Model[i].DaGuiEmail)
                    {
                        <span class="text-success">Đã gửi</span>
                    }
                    else
                    {
                        <span class="text-danger">Chưa gửi</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@Model[i].MaDon" class="btn btn-info btn-sm">Chi tiết</a>

                    @if (Model[i].TrangThai == "Chờ xác nhận")
                    {
                        <a asp-action="Duyet" asp-route-id="@Model[i].MaDon" asp-route-chapNhan="true" class="btn btn-success btn-sm">Duyệt</a>
                        <a asp-action="Duyet" asp-route-id="@Model[i].MaDon" asp-route-chapNhan="false" class="btn btn-danger btn-sm">Từ chối</a>
                    }

                    @if (Model[i].TrangThai == "Đã duyệt")
                    {
                        <a asp-action="UploadBaiThi" asp-route-maDon="@Model[i].MaDon" class="btn btn-warning btn-sm">Upload bài thi</a>
                        <a asp-action="ChiTietUpload" asp-route-maDon="@Model[i].MaDon" class="btn btn-secondary btn-sm">Xem Upload</a>
                        <a asp-action="EditUpload" asp-route-maDon="@Model[i].MaDon" class="btn btn-secondary btn-sm">Sửa Upload</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>