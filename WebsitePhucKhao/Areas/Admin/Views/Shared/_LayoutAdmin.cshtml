@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | Hệ thống phúc khảo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsitePhucKhao.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <header class="bg-dark text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h5 m-0">
                <i class="fas fa-user-shield me-2"></i>Trang quản trị - Admin
            </h1>
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
        </div>
    </header>

    <nav class="bg-white border-bottom">
        <div class="container">
            <ul class="nav nav-pills py-2">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-list me-1"></i>Trang chủ quản trị
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="SinhVien" asp-action="Index">
                        <i class="fas fa-list me-1"></i>Danh sách sinh viên
                    </a>
                </li>
                <a class="nav-link" asp-area="Admin" asp-controller="NhanVienPhongDaoTao" asp-action="Index">
                    <i class="fas fa-list me-1"></i>Danh sách nhân viên
                </a>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="GiangVien" asp-action="Index">
                        <i class="fas fa-list me-1"></i>Danh sách giảng viên
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="SinhVien" asp-action="Add">
                        <i class="fas fa-user-plus me-1"></i>Thêm sinh viên
                    </a>
                </li>
                <li class="nav-item ms-auto">
                    <partial name="_LoginPartial" />
                </li>
            </ul>
        </div>
    </nav>

    <main class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center p-3 bg-dark text-white mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year - Hệ thống phúc khảo | Quản trị
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
