@{
    ViewData["Title"] = "Hệ thống phúc khảo";
    var isLoginPage = Context.Request.Path.Value?.Contains("/Account/Login") ?? false;
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}

@if (!isLoginPage)
{
    <!-- Hero Section -->
    <section class="hero-section position-relative overflow-hidden py-8">
        <div class="bg-gradient-primary position-absolute w-100 h-100" style="opacity: 0.9;"></div>
        <div class="container position-relative">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="hero-content text-center text-lg-start">
                        <span class="badge bg-white bg-opacity-25 text-white mb-4 px-4 py-2 rounded-pill animate__animated animate__fadeInDown">
                            <i class="fas fa-graduation-cap me-2"></i>Hệ thống phúc khảo trực tuyến
                        </span>
                        <h1 class="display-4 fw-bold text-white mb-4 animate__animated animate__fadeInUp">
                            Nộp yêu cầu phúc khảo<br/>dễ dàng và nhanh chóng
                        </h1>
                        <p class="lead text-white-50 mb-5 animate__animated animate__fadeInUp animate__delay-1s" style="font-size: 1.2rem;">
                            Nền tảng đơn giản và hiệu quả để sinh viên nộp yêu cầu phúc khảo kết quả học tập.
                            Theo dõi trạng thái yêu cầu dễ dàng và nhanh chóng.
                        </p>
                        <div class="d-flex gap-3 justify-content-center justify-content-lg-start animate__animated animate__fadeInUp animate__delay-2s">
                            <a href="#features" class="btn btn-light btn-lg px-5 py-3 rounded-pill shadow-sm">
                                <i class="fas fa-info-circle me-2"></i>Tìm hiểu thêm
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="ReviewRequest" asp-action="Create" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">
                                    <i class="fas fa-plus-circle me-2"></i>Nộp yêu cầu
                                </a>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">
                                    <i class="fas fa-sign-in-alt me-2"></i>Gửi yêu cầu
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="hero-image-wrapper animate__animated animate__fadeInRight">
                        <div class="position-relative">
                            <img src="~/images/Logo.jpg" alt="Hero Image" class="img-fluid rounded-4 shadow-lg" style="width: 100%; max-width: 500px;">
                            <div class="position-absolute top-0 start-0 w-100 h-100 bg-primary bg-opacity-10 rounded-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-8 bg-light">
        <div class="container">
            <div class="text-center mb-8">
                <span class="badge bg-primary bg-opacity-10 text-primary px-4 py-2 rounded-pill mb-4">
                    <i class="fas fa-star me-2"></i>Tính năng nổi bật
                </span>
                <h2 class="display-5 fw-bold mb-4">Mọi thứ bạn cần</h2>
                <p class="lead text-muted mx-auto" style="max-width: 700px;">Quản lý yêu cầu phúc khảo một cách hiệu quả</p>
            </div>
            <div class="row g-5 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-card h-100 border-0 shadow-sm rounded-4 p-5 text-center bg-white hover-lift">
                        <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle mb-4 mx-auto" style="width: 80px; height: 80px; line-height: 80px;">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                        <h3 class="feature-title h4 mb-3">Nộp yêu cầu dễ dàng</h3>
                        <p class="feature-description text-muted mb-0">
                            Giao diện thân thiện giúp bạn nộp yêu cầu phúc khảo nhanh chóng và chính xác.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card h-100 border-0 shadow-sm rounded-4 p-5 text-center bg-white hover-lift">
                        <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle mb-4 mx-auto" style="width: 80px; height: 80px; line-height: 80px;">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h3 class="feature-title h4 mb-3">Theo dõi trạng thái</h3>
                        <p class="feature-description text-muted mb-0">
                            Cập nhật trạng thái yêu cầu theo thời gian thực, giúp bạn nắm bắt tiến độ xử lý.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card h-100 border-0 shadow-sm rounded-4 p-5 text-center bg-white hover-lift">
                        <div class="feature-icon bg-warning bg-opacity-10 text-warning rounded-circle mb-4 mx-auto" style="width: 80px; height: 80px; line-height: 80px;">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <h3 class="feature-title h4 mb-3">Xử lý nhanh chóng</h3>
                        <p class="feature-description text-muted mb-0">
                            Quy trình xử lý tối ưu giúp giảm thời gian chờ đợi và tăng hiệu quả.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section position-relative overflow-hidden bg-gradient-primary text-white">
        <div class="container position-relative py-8">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <span class="badge bg-white bg-opacity-25 text-white mb-4 px-4 py-2 rounded-pill">
                        <i class="fas fa-rocket me-2"></i>Bắt đầu ngay
                    </span>
                    <h2 class="display-5 fw-bold text-white mb-4">Sẵn sàng bắt đầu?</h2>
                    <p class="lead text-white-50 mb-5" style="font-size: 1.2rem;">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span>Bạn đã sẵn sàng để nộp yêu cầu phúc khảo hoặc theo dõi trạng thái yêu cầu.</span>
                        }
                        else
                        {
                            <span>Đăng nhập ngay để nộp yêu cầu phúc khảo hoặc theo dõi trạng thái yêu cầu của bạn.</span>
                        }
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="ReviewRequest" asp-action="Create" class="btn btn-light btn-lg px-5 py-3 rounded-pill shadow-sm">
                                <i class="fas fa-plus-circle me-2"></i>Tạo yêu cầu mới
                            </a>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-light btn-lg px-5 py-3 rounded-pill shadow-sm">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập ngay
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <script src="~/js/home.js"></script>
}